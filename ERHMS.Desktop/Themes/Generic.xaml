<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls"
                    xmlns:Converters="clr-namespace:ERHMS.Desktop.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Converters:ActionTextBoxPaddingConverter x:Key="ActionTextBoxPaddingConverter" />
    <Converters:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter" />
    <Converters:PhaseToColorConverter x:Key="PhaseToGradientStartColorConverter"
                                      Alpha="0x40" />
    <Converters:PhaseToColorConverter x:Key="PhaseToGradientStopColorConverter"
                                      Alpha="0x00" />
    <Converters:PhaseToDisplayTextConverter x:Key="PhaseToDisplayTextConverter" />

    <Style TargetType="Controls:ActionTextBox">
        <Setter Property="Padding" Value="{StaticResource SmallThickness}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:ActionTextBox">
                    <Grid>
                        <TextBox x:Name="PART_TextBox"
                                 AutomationProperties.Name="{Binding (AutomationProperties.Name), RelativeSource={RelativeSource TemplatedParent}}"
                                 IsReadOnly="{TemplateBinding IsReadOnly}"
                                 Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Padding>
                                <MultiBinding Converter="{StaticResource ActionTextBoxPaddingConverter}">
                                    <Binding Path="Padding" RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding Path="ActualWidth" ElementName="PART_Button" />
                                </MultiBinding>
                            </TextBox.Padding>
                        </TextBox>
                        <Button x:Name="PART_Button"
                                AutomationProperties.HelpText="{TemplateBinding ActionHelpText}"
                                Command="{TemplateBinding ActionCommand}"
                                Content="{TemplateBinding ActionContent}"
                                HorizontalAlignment="Right" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Controls:PhaseHeading">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:PhaseHeading">
                    <Border Margin="{StaticResource DefaultMargin}"
                            Padding="{StaticResource DefaultPadding}"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="1,0">
                                <GradientStop Color="{Binding Phase, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PhaseToGradientStartColorConverter}}"
                                              Offset="0" />
                                <GradientStop Color="{Binding Phase, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PhaseToGradientStopColorConverter}}"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Style="{StaticResource Heading}"
                                   Text="{TemplateBinding Phase, Converter={StaticResource PhaseToDisplayTextConverter}}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Controls:Toaster">
        <Setter Property="Opacity" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:Toaster">
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Controls:Toaster.Shown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     Duration="0"
                                                     To="0" />
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     Duration="0:0:0.1"
                                                     To="1" />
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     BeginTime="0:0:5"
                                                     Duration="0:0:1"
                                                     To="0" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="Opacity" Value="0">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <Border Background="{StaticResource ToasterBrush}"
                            BorderBrush="{StaticResource ToasterBorderBrush}"
                            BorderThickness="1"
                            Padding="{StaticResource DefaultPadding}"
                            SnapsToDevicePixels="True"
                            Width="320">
                        <TextBlock Foreground="{StaticResource ToasterTextBrush}"
                                   Style="{StaticResource Small}"
                                   Text="{TemplateBinding Message}"
                                   TextAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Controls:VerboseButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:VerboseButton">
                    <Button AutomationProperties.HelpText="{TemplateBinding HelpText}"
                            AutomationProperties.Name="{TemplateBinding Text}"
                            Background="Transparent"
                            Command="{TemplateBinding Command}"
                            HorizontalContentAlignment="Left">
                        <StackPanel>
                            <TextBlock Style="{StaticResource Body}"
                                       Margin="0"
                                       Text="{TemplateBinding Text}" />
                            <TextBlock Style="{StaticResource Small}"
                                       Text="{TemplateBinding HelpText}"
                                       Visibility="{TemplateBinding HelpText, Converter={StaticResource NullableToVisibilityConverter}}">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource SmallSpace}" />
                                </TextBlock.Margin>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
