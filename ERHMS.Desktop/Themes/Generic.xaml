<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls"
                    xmlns:Converters="clr-namespace:ERHMS.Desktop.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Converters:ActionTextBoxPaddingConverter x:Key="ActionTextBoxPaddingConverter" />
    <Converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
    <Converters:PhaseHeadingBackgroundConverter x:Key="PhaseHeadingBackgroundConverter" />
    <Converters:PhaseToDisplayTextConverter x:Key="PhaseToDisplayTextConverter" />

    <Style TargetType="Controls:ActionTextBox">
        <Setter Property="Padding" Value="{StaticResource SmallPadding}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:ActionTextBox">
                    <Grid>
                        <TextBox x:Name="PART_TextBox"
                                 AutomationProperties.Name="{Binding (AutomationProperties.Name), RelativeSource={RelativeSource TemplatedParent}}"
                                 IsReadOnly="{TemplateBinding IsReadOnly}"
                                 Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Padding>
                                <MultiBinding Converter="{StaticResource ActionTextBoxPaddingConverter}">
                                    <Binding Path="Padding" RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding Path="ActualWidth" ElementName="PART_Button" />
                                </MultiBinding>
                            </TextBox.Padding>
                        </TextBox>
                        <Button x:Name="PART_Button"
                                AutomationProperties.Name="{TemplateBinding ActionName}"
                                Command="{TemplateBinding Command}"
                                Content="{TemplateBinding ActionText}"
                                HorizontalAlignment="Right" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Controls:PhaseHeading">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:PhaseHeading">
                    <Border Background="{TemplateBinding Phase, Converter={StaticResource PhaseHeadingBackgroundConverter}}"
                            Margin="{StaticResource DefaultMargin}"
                            Padding="{StaticResource SmallHorizontalPadding}"
                            SnapsToDevicePixels="True">
                        <TextBlock FontSize="{StaticResource LargeFontSize}"
                                   FontWeight="{StaticResource ThinFontWeight}"
                                   Margin="{StaticResource DefaultMargin}"
                                   Text="{TemplateBinding Phase, Converter={StaticResource PhaseToDisplayTextConverter}}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Controls:WizardButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:WizardButton">
                    <Button AutomationProperties.HelpText="{TemplateBinding HelpText}"
                            AutomationProperties.Name="{TemplateBinding Text}"
                            Background="Transparent"
                            Command="{TemplateBinding Command}"
                            HorizontalContentAlignment="Left"
                            Padding="{StaticResource LargePadding}">
                        <StackPanel>
                            <TextBlock FontSize="{StaticResource DefaultFontSize}"
                                       Text="{TemplateBinding Text}"
                                       TextWrapping="Wrap" />
                            <TextBlock FontSize="{StaticResource SmallFontSize}"
                                       Text="{TemplateBinding HelpText}"
                                       TextWrapping="Wrap"
                                       Visibility="{TemplateBinding HelpText, Converter={StaticResource ObjectToVisibilityConverter}}">
                                <TextBlock.Margin>
                                    <Thickness Top="{StaticResource SmallSpace}" />
                                </TextBlock.Margin>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
