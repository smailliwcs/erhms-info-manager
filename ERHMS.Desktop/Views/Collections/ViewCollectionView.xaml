<UserControl x:Class="ERHMS.Desktop.Views.Collections.ViewCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors"
             xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Controls:IconButton AltText="Create"
                                 Command="{Binding CreateCommand}"
                                 Content="{x:Static local:Icons.New}" />
            <Controls:IconButton AltText="Customize"
                                 Command="{Binding CustomizeCommand}"
                                 Content="{x:Static local:Icons.Build}" />
            <Controls:IconButton AltText="Delete"
                                 Command="{Binding DeleteCommand}"
                                 Content="{x:Static local:Icons.Delete}" />
            <Border Style="{StaticResource Separator}" />
            <Controls:IconButton AltText="View records"
                                 Command="{Binding ViewRecordsCommand}"
                                 Content="{x:Static local:Icons.View}" />
            <Controls:IconButton AltText="Enter records"
                                 Command="{Binding EnterRecordsCommand}"
                                 Content="{x:Static local:Icons.Edit}" />
            <Border Style="{StaticResource Separator}" />
            <Controls:IconButton AltText="Import records"
                                 Command="{Binding ImportRecordsCommand}"
                                 Content="{x:Static local:Icons.Import}" />
            <Controls:IconButton AltText="Export records"
                                 Command="{Binding ExportRecordsCommand}"
                                 Content="{x:Static local:Icons.Export}" />
            <Border Style="{StaticResource Separator}" />
            <Controls:IconButton AltText="Refresh"
                                 Command="{Binding RefreshCommand}"
                                 Content="{x:Static local:Icons.Refresh}" />
        </WrapPanel>
        <DataGrid x:Name="ItemDataGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Value.Name}"
                                    Header="Name"
                                    Width="3*" />
                <DataGridTextColumn Binding="{Binding PageCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Pages"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding FieldCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Fields"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding RecordCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Records"
                                    Width="*" />
            </DataGrid.Columns>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="IsSelected" Value="{Binding Selected}" />
                </Style>
            </DataGrid.ItemContainerStyle>
            <b:Interaction.Behaviors>
                <Behaviors:EnhanceKeyboardNavigation />
            </b:Interaction.Behaviors>
        </DataGrid>
        <Controls:ItemsControlWatermark Grid.Row="1"
                                        ItemsControl="{x:Reference ItemDataGrid}" />
    </Grid>
</UserControl>
