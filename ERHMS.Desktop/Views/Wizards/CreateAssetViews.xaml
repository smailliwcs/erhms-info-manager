<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModels="clr-namespace:ERHMS.Desktop.ViewModels.Wizards">
    <DataTemplate DataType="{x:Type ViewModels:CreateAssetViewModel+SetViewViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Target="{x:Reference View}">
                Form:
            </Label>
            <ComboBox x:Name="View"
                      AutomationProperties.Name="Form"
                      Grid.Column="1"
                      DisplayMemberPath="Name"
                      ItemsSource="{Binding Views}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ComboBoxItemBase}">
                        <Setter Property="AutomationProperties.Name" Value="{Binding Name}" />
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateAssetViewModel+SetFileInfoViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Column="0"
                   Grid.Row="0"
                   Target="{x:Reference FileName}">
                File name:
            </Label>
            <TextBox x:Name="FileName"
                     AutomationProperties.Name="File name"
                     Grid.Column="1"
                     Grid.Row="0"
                     IsReadOnly="True"
                     Text="{Binding FileInfo.Name, Mode=OneWay}" />
            <Button Grid.Column="2"
                    Grid.Row="0"
                    Command="{Binding BrowseCommand}">
                Browse...
            </Button>
            <Label Grid.Column="0"
                   Grid.Row="1">
                Location:
            </Label>
            <Label Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Grid.Row="1">
                <TextBlock Text="{Binding FileInfo.DirectoryName}"
                           TextWrapping="Wrap" />
            </Label>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateAssetViewModel+CommitViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Column="0"
                   Grid.Row="0">
                Form:
            </Label>
            <Label Grid.Column="1"
                   Grid.Row="0"
                   Content="{Binding Wizard.View.Name}" />
            <Label Grid.Column="0"
                   Grid.Row="1">
                File name:
            </Label>
            <Label Grid.Column="1"
                   Grid.Row="1"
                   Content="{Binding Wizard.FileInfo.Name}" />
            <Label Grid.Column="0"
                   Grid.Row="2">
                Location:
            </Label>
            <Label Grid.Column="1"
                   Grid.Row="2">
                <TextBlock Text="{Binding Wizard.FileInfo.DirectoryName}"
                           TextWrapping="Wrap" />
            </Label>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateAssetViewModel+CloseViewModel}">
        <CheckBox IsChecked="{Binding Opening}"
                  Content="Open in Epi Info" />
    </DataTemplate>
</ResourceDictionary>
