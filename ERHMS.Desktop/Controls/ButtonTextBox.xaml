<UserControl x:Name="Root"
             x:Class="ERHMS.Desktop.Controls.ButtonTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="True">
    <Grid>
        <TextBox x:Name="TextBox"
                 AutomationProperties.Name="{Binding (AutomationProperties.Name), ElementName=Root}"
                 IsReadOnly="{Binding IsReadOnly, ElementName=Root}"
                 Text="{Binding Text, ElementName=Root, UpdateSourceTrigger=PropertyChanged}" />
        <Button x:Name="Button"
                AutomationProperties.Name="{Binding ButtonName, ElementName=Root}"
                Command="{Binding Command, ElementName=Root}"
                Content="{Binding ButtonContent, ElementName=Root}"
                HorizontalAlignment="Right" />
    </Grid>
</UserControl>
