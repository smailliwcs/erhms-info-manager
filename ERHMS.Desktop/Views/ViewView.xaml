<UserControl x:Class="ERHMS.Desktop.Views.ViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource FluidLayout}">
        <Border Background="{Binding Background, ElementName=RecordDataGrid}"
                Margin="{StaticResource DefaultMargin}">
            <DataGrid x:Name="RecordDataGrid"
                      DataContext="{Binding Records}"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Items}"
                      Margin="0"
                      MaxColumnWidth="320">
                <b:Interaction.Behaviors>
                    <Behaviors:EnhanceKeyboardNavigation />
                </b:Interaction.Behaviors>
            </DataGrid>
        </Border>
    </Border>
</UserControl>
