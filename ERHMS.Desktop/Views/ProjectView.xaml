<UserControl x:Class="ERHMS.Desktop.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource LayoutLarge}">
        <StackPanel Style="{StaticResource Container}">
            <StackPanel Style="{StaticResource Section}">
                <!-- TODO: Home button -->
                <TextBlock Style="{StaticResource TextBlockBase}">
                    <Run Style="{StaticResource TitleText}"
                         Text="{Binding Project.Type, Mode=OneWay, StringFormat='{}{0} Database'}" />
                    <LineBreak />
                    <Run Style="{StaticResource SmallText}"
                         Text="{Binding Project.FilePath, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            <StackPanel Style="{StaticResource Section}">
                <TextBlock Style="{StaticResource Heading}">Forms</TextBlock>
                <DataGrid ItemsSource="{Binding Views}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Name"
                                            Width="2*" />
                        <DataGridTextColumn Binding="{Binding RecordCount}"
                                            Header="Records"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel Style="{StaticResource Section}">
                <TextBlock Style="{StaticResource Heading}">Dashboards</TextBlock>
            </StackPanel>
            <!-- TODO -->
        </StackPanel>
    </Border>
</UserControl>
