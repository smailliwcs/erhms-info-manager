<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModels="clr-namespace:ERHMS.Desktop.ViewModels.Wizards"
                    xmlns:Views="clr-namespace:ERHMS.Desktop.Views">
    <DataTemplate DataType="{x:Type ViewModels:CreateViewViewModel+InitializeViewModel}">
        <StackPanel>
            <StackPanel.Resources>
                <!-- TODO: Consolidate with buttons on home screen? -->
                <Style TargetType="Button" BasedOn="{StaticResource ButtonBase}">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="{StaticResource LargeThickness}" />
                </Style>
            </StackPanel.Resources>
            <!-- TODO: Add and style tooltips? -->
            <Button Command="{Binding CreateBlankCommand}">Create a blank form</Button>
            <Button Command="{Binding CreateFromTemplateCommand}">Create a form based on a template</Button>
            <Button Command="{Binding CreateFromExistingCommand}">Copy an existing form</Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateViewViewModel+Blank+SetViewNameViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Target="{x:Reference ViewName}">
                Form name:
            </Label>
            <TextBox x:Name="ViewName"
                     AutomationProperties.Name="Form name"
                     Grid.Column="1"
                     Text="{Binding ViewName, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateViewViewModel+Blank+SetWithWorkerInfoViewModel}">
        <StackPanel>
            <TextBlock Style="{StaticResource Body}">
                To link each record to a worker, include worker information fields on the form.
                These fields will allow you to look up a worker's unique ID based on their name and email address.
            </TextBlock>
            <CheckBox Content="Include worker information fields?"
                      IsChecked="{Binding WithWorkerInfo}" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateViewViewModel+Blank+CommitViewModel}">
        <Views:DetailsView ItemsSource="{Binding Details}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:CreateViewViewModel+CloseViewModel}">
        <CheckBox Content="Open in Epi Info"
                  IsChecked="{Binding Opening}" />
    </DataTemplate>
</ResourceDictionary>
