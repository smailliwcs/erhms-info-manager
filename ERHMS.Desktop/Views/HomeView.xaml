<UserControl x:Class="ERHMS.Desktop.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls"
             xmlns:Properties="clr-namespace:ERHMS.Desktop.Properties"
             xmlns:Projects="clr-namespace:ERHMS.EpiInfo.Projects;assembly=ERHMS.EpiInfo">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonBase}">
            <Setter Property="Padding" Value="{StaticResource LargePadding}" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Border Style="{StaticResource LayoutSmall}">
            <StackPanel Style="{StaticResource Container}">
                <Grid Style="{StaticResource Section}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           AutomationProperties.Name="{Binding Source={x:Static Properties:ResX.AppTitle}, StringFormat='{}{0} Logo'}"
                           Margin="{StaticResource DefaultMargin}"
                           Source="../Resources/ERHMS.ico"
                           Width="64">
                    </Image>
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource Title}"
                               Text="{x:Static Properties:ResX.AppTitle}"
                               VerticalAlignment="Center" />
                </Grid>
                <StackPanel Style="{StaticResource Section}">
                    <Controls:PhaseHeading Phase="PreDeployment" />
                    <Button>Plan for pre-deployment</Button>
                    <Button Command="local:AppCommands.ViewWorkerProjectCommand">Customize worker forms</Button>
                    <Button Command="local:AppCommands.ViewCoreViewCommand"
                            CommandParameter="{x:Static Projects:CoreView.WorkerInfo}">
                        Collect worker information
                    </Button>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <Controls:PhaseHeading Phase="Deployment" />
                    <Button>Plan for deployment</Button>
                    <Button Command="local:AppCommands.ViewIncidentProjectCommand">Customize incident forms</Button>
                    <Button>In-process workers</Button>
                    <Button Command="local:AppCommands.ViewCoreViewCommand"
                            CommandParameter="{x:Static Projects:CoreView.WorkerStatus}">
                        Collect worker status reports
                    </Button>
                    <Button>Collect incident status reports</Button>
                    <Button>Out-process workers</Button>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <Controls:PhaseHeading Phase="PostDeployment" />
                    <Button>Plan for post-deployment</Button>
                    <Button Command="local:AppCommands.ViewIncidentProjectCommand">Customize incident forms</Button>
                    <Button>Follow up with workers</Button>
                    <Button>Collect after-action reports</Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
