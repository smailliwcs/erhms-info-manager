<UserControl x:Class="ERHMS.Desktop.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls"
             xmlns:Markup="clr-namespace:ERHMS.Desktop.Markup"
             Background="{x:Static SystemColors.WindowBrush}"
             BorderBrush="{x:Static SystemColors.WindowFrameBrush}"
             BorderThickness="1"
             Width="320">
    <ScrollViewer>
        <Border Style="{StaticResource FluidLayout}">
            <StackPanel Style="{StaticResource Container}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Style="{StaticResource Heading}"
                               Text="{Markup:String Heading.Start}" />
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <StackPanel.Resources>
                            <Style TargetType="Controls:IconButton" BasedOn="{StaticResource ControlIconButton}" />
                        </StackPanel.Resources>
                        <StackPanel.Margin>
                            <Thickness Left="{StaticResource LargeSpace}" />
                        </StackPanel.Margin>
                        <Controls:IconButton AltText="{Markup:String AltText.Help}"
                                             Content="{Markup:Icon Help}" />
                        <Controls:IconButton AltText="{Markup:String AltText.Close}"
                                             Content="{Markup:Icon Close}" />
                    </StackPanel>
                </Grid>
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource WorkflowButton}">
                            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
                            <Setter Property="ToolTip" Value="{x:Null}" />
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel Style="{StaticResource Section}">
                        <TextBlock Style="{StaticResource Lead}"
                                   Text="{Markup:String Lead.Start.Worker}" />
                        <Button Content="{Markup:String AccessText.SetUpProject.Worker}" />
                        <Button Content="{Markup:String AccessText.UseView.WorkerRosteringForm}" />
                        <Button Content="{Markup:String AccessText.ExploreViews.Worker}" />
                    </StackPanel>
                    <StackPanel Style="{StaticResource Section}">
                        <TextBlock Style="{StaticResource Lead}"
                                   Text="{Markup:String Lead.Start.Incident}" />
                        <Button Content="{Markup:String AccessText.SetUpProject.Incident}" />
                        <Button Content="{Markup:String AccessText.UseView.WorkerDeploymentRecord}" />
                        <Button Content="{Markup:String AccessText.ExploreViews.Incident}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
