<Window x:Class="ERHMS.Desktop.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:ERHMS.Desktop.Properties"
        Height="768"
        MinHeight="480"
        MinWidth="640"
        Title="{x:Static Properties:Resources.AppTitle}"
        Width="1024"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Grid.Column="0"
                      Header="H_ome" />
            <MenuItem Grid.Column="1"
                      Header="_Tools">
                <MenuItem Header="Open _Epi Info" />
                <MenuItem Header="Open _File Explorer" />
                <Separator />
                <MenuItem Header="_Check data quality" />
                <MenuItem Header="E_xport data" />
                <MenuItem Header="_Import data" />
                <MenuItem Header="_Back up data" />
                <Separator />
                <MenuItem Header="Export _logs" />
            </MenuItem>
            <MenuItem Grid.Column="3"
                      Header="_Help" />
        </Menu>
        <ScrollViewer Grid.Row="1">
            <StackPanel MaxWidth="{StaticResource SmallLayoutWidth}"
                        Style="{StaticResource Container}">
                <StackPanel Style="{StaticResource Section}">
                    <TextBlock Style="{StaticResource Title}">ERHMS Info Manager</TextBlock>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <TextBlock Style="{StaticResource Heading}">Pre-deployment</TextBlock>
                    <Button>Plan for pre-deployment</Button>
                    <Button>Manage worker forms</Button>
                    <Button>Collect worker information</Button>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <TextBlock Style="{StaticResource Heading}">Incident</TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <ComboBox />
                            <Label Style="{StaticResource Watermark}">
                                <TextBlock>
                                    <Run>Select an incident or click</Run>
                                    <Run Style="{StaticResource Emphasis}">Manage</Run>
                                </TextBlock>
                            </Label>
                        </Grid>
                        <Button Grid.Column="1">Manage</Button>
                    </Grid>
                    <Button>Manage incident forms</Button>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <TextBlock Style="{StaticResource Heading}">Deployment</TextBlock>
                    <Button>Plan for deployment</Button>
                    <Button>In-process workers</Button>
                    <Button>Collect worker status reports</Button>
                    <Button>Collect incident status reports</Button>
                    <Button>Out-process workers</Button>
                </StackPanel>
                <StackPanel Style="{StaticResource Section}">
                    <TextBlock Style="{StaticResource Heading}">Post-deployment</TextBlock>
                    <Button>Plan for post-deployment</Button>
                    <Button>Follow up with workers</Button>
                    <Button>Collect after-action reports</Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
