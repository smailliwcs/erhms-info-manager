<UserControl x:Class="ERHMS.Desktop.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             AutomationProperties.Name="ERHMS Info Manager">
    <StackPanel MaxWidth="{StaticResource SmallLayoutWidth}"
                Style="{StaticResource Container}">
        <StackPanel Style="{StaticResource Section}">
            <TextBlock Style="{StaticResource Title}">ERHMS Info Manager</TextBlock>
        </StackPanel>
        <StackPanel Style="{StaticResource Section}">
            <TextBlock Style="{StaticResource Heading}">Databases</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Worker</Label>
                <TextBox Grid.Row="0" Grid.Column="1"
                         AutomationProperties.Name="Worker database"
                         IsReadOnly="True" />
                <Button Grid.Row="0" Grid.Column="2"
                        AutomationProperties.Name="Change worker database">
                    Change
                </Button>
                <Label Grid.Row="1" Grid.Column="0">Incident</Label>
                <TextBox Grid.Row="1" Grid.Column="1"
                         AutomationProperties.Name="Incident database"
                         IsReadOnly="True" />
                <Button Grid.Row="1" Grid.Column="2"
                        AutomationProperties.Name="Change incident database">
                    Change
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel Style="{StaticResource Section}">
            <TextBlock Style="{StaticResource Heading}">Pre-deployment</TextBlock>
            <Button>Plan for pre-deployment</Button>
            <Button>Manage worker forms</Button>
            <Button>Collect worker information</Button>
        </StackPanel>
        <StackPanel Style="{StaticResource Section}">
            <TextBlock Style="{StaticResource Heading}">Deployment</TextBlock>
            <Button>Plan for deployment</Button>
            <Button>Manage incident forms</Button>
            <Button>In-process workers</Button>
            <Button>Collect worker status reports</Button>
            <Button>Collect incident status reports</Button>
            <Button>Out-process workers</Button>
        </StackPanel>
        <StackPanel Style="{StaticResource Section}">
            <TextBlock Style="{StaticResource Heading}">Post-deployment</TextBlock>
            <Button>Plan for post-deployment</Button>
            <Button>Manage incident forms</Button>
            <Button>Follow up with workers</Button>
            <Button>Collect after-action reports</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
