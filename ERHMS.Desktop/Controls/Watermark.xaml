<UserControl x:Class="ERHMS.Desktop.Controls.Watermark"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Markup="clr-namespace:ERHMS.Desktop.Markup"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Visibility="{Binding ItemsControl.HasItems, ElementName=Root, Converter={StaticResource BooleanToVisibilityInverter}}">
    <Border Background="{x:Static SystemColors.WindowBrush}"
            BorderBrush="{x:Static SystemColors.ControlDarkBrush}"
            BorderThickness="1"
            Padding="{StaticResource DefaultPadding}">
        <TextBlock Foreground="{x:Static SystemColors.WindowTextBrush}"
                   Style="{StaticResource Body}"
                   Text="{Markup:String Watermark}" />
    </Border>
</UserControl>
