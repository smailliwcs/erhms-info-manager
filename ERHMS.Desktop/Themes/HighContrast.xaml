<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="AccentTextBrush" Color="{x:Static SystemColors.WindowTextColor}" />

    <DropShadowEffect x:Key="Shadow" Color="Transparent" />

    <SolidColorBrush x:Key="ToasterBrush" Color="{x:Static SystemColors.WindowColor}" />
    <SolidColorBrush x:Key="ToasterBorderBrush" Color="{x:Static SystemColors.WindowFrameColor}" />
    <SolidColorBrush x:Key="ToasterTextBrush" Color="{x:Static SystemColors.WindowTextColor}" />
</ResourceDictionary>
