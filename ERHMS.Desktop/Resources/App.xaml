<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Body" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="BodyText" TargetType="TextElement">
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
    </Style>

    <Style x:Key="Container" TargetType="Panel">
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="DialogButton" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="MinWidth" Value="75" />
        <Setter Property="Padding" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="Emphasis" TargetType="Run">
        <Setter Property="FontWeight" Value="{StaticResource ThickFontWeight}" />
    </Style>

    <Style x:Key="Heading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource ThinFontWeight}" />
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="HeadingText" TargetType="TextElement">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource ThinFontWeight}" />
    </Style>

    <Style x:Key="Layout" TargetType="Border">
        <Setter Property="Padding" Value="{StaticResource LargeThickness}" />
    </Style>

    <Style x:Key="LayoutSmall" TargetType="Border" BasedOn="{StaticResource Layout}">
        <Setter Property="MaxWidth" Value="{StaticResource SmallWidth}" />
    </Style>

    <Style x:Key="LayoutLarge" TargetType="Border" BasedOn="{StaticResource Layout}">
        <Setter Property="MaxWidth" Value="{StaticResource LargeWidth}" />
    </Style>

    <Style x:Key="Lead" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="LeadText" TargetType="TextElement">
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
    </Style>

    <Style x:Key="Preformatted" TargetType="TextBox" BasedOn="{StaticResource TextBoxBase}">
        <Setter Property="FontFamily" Value="{StaticResource MonospacedFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style x:Key="Section" TargetType="Panel">
        <Setter Property="Margin">
            <Setter.Value>
                <Thickness Bottom="{StaticResource HugeSpace}" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Title" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource HugeFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource ThickFontWeight}" />
        <Setter Property="Margin" Value="{StaticResource SmallThickness}" />
    </Style>

    <Style x:Key="TitleText" TargetType="TextElement">
        <Setter Property="FontSize" Value="{StaticResource HugeFontSize}" />
        <Setter Property="FontWeight" Value="{StaticResource ThickFontWeight}" />
    </Style>

    <Style x:Key="Watermark" TargetType="Label" BasedOn="{StaticResource LabelBase}">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Padding" Value="{StaticResource LargeThickness}" />
    </Style>
</ResourceDictionary>
