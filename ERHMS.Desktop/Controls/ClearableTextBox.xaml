<UserControl x:Name="Root"
             x:Class="ERHMS.Desktop.Controls.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBox x:Name="TextBox"
                 AutomationProperties.Name="{Binding (AutomationProperties.Name), ElementName=Root}"
                 Text="{Binding Text, ElementName=Root, UpdateSourceTrigger=PropertyChanged}" />
        <Button x:Name="Clear"
                AutomationProperties.Name="{Binding (AutomationProperties.Name), ElementName=Root, StringFormat='Clear {0}'}"
                Click="Clear_Click"
                HorizontalAlignment="Right">
            Clear
        </Button>
    </Grid>
</UserControl>
