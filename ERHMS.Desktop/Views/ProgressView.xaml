<Window x:Class="ERHMS.Desktop.Views.ProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:ERHMS.Desktop.Converters"
        xmlns:Properties="clr-namespace:ERHMS.Desktop.Properties"
        AutomationProperties.HelpText="{Binding Title}"
        Icon="/ERHMS Info Manager;component/Resources/ERHMS.ico"
        ResizeMode="NoResize"
        SizeToContent="Height"
        SnapsToDevicePixels="True"
        Title="{x:Static Properties:ResX.AppTitle}"
        Width="480"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <Style TargetType="Button" BasedOn="{StaticResource DialogButton}" />
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <Border BorderBrush="{x:Static SystemColors.WindowFrameBrush}"
                BorderThickness="0,1,0,0"
                SnapsToDevicePixels="True"
                Style="{StaticResource LayoutFull}">
            <StackPanel Style="{StaticResource Container}">
                <TextBlock Foreground="{DynamicResource AccentTextBrush}"
                           Style="{StaticResource Lead}"
                           Text="{Binding Title}" />
                <ProgressBar IsIndeterminate="True" />
                <TextBlock Style="{StaticResource Body}"
                           Text="{Binding Status}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap" />
            </StackPanel>
        </Border>
        <Border Background="{x:Static SystemColors.MenuBarBrush}"
                BorderBrush="{x:Static SystemColors.WindowFrameBrush}"
                BorderThickness="0,1,0,0"
                SnapsToDevicePixels="True"
                Visibility="{Binding CanBeCanceled, Converter={StaticResource BoolToVisibilityConverter}}">
            <WrapPanel HorizontalAlignment="Right"
                       Style="{StaticResource Container}">
                <Button Command="{Binding CancelCommand}"
                        IsCancel="True">
                    Cancel
                </Button>
            </WrapPanel>
        </Border>
    </StackPanel>
</Window>
