<UserControl x:Class="ERHMS.Desktop.Controls.ItemsControlWatermark"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:ERHMS.Desktop.Converters"
             HorizontalAlignment="Center"
             VerticalAlignment="Center">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:BoolToVisibilityInverter x:Key="BoolToVisibilityInverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.Visibility>
        <Binding Converter="{StaticResource BoolToVisibilityInverter}"
                 ElementName="Root"
                 Path="ItemsControl.HasItems" />
    </UserControl.Visibility>
    <Border Background="{x:Static SystemColors.WindowBrush}"
            BorderBrush="{x:Static SystemColors.WindowFrameBrush}"
            BorderThickness="1"
            Padding="{StaticResource DefaultPadding}">
        <TextBlock Style="{StaticResource Body}"
                   Text="{Binding Text, ElementName=Root}" />
    </Border>
</UserControl>
