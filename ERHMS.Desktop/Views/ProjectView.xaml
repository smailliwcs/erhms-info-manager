<UserControl x:Class="ERHMS.Desktop.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors">
    <Border Style="{StaticResource LayoutLarge}">
        <Grid Style="{StaticResource Container}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Style="{StaticResource Section}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource Title}"
                           Text="{Binding Project.Type, StringFormat='{}{0} Database'}" />
                <WrapPanel Grid.Column="1"
                           VerticalAlignment="Top">
                    <WrapPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource ActionButton}" />
                    </WrapPanel.Resources>
                    <Button Command="{Binding RefreshCommand}">Refresh</Button>
                    <Button Command="local:AppCommands.GoHomeCommand">Home</Button>
                </WrapPanel>
            </Grid>
            <TabControl Grid.Row="1">
                <TabItem Header="Forms">
                    <Border Style="{StaticResource LayoutFull}">
                        <Grid Style="{StaticResource Container}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource Body}">
                                Select an existing form or <Hyperlink>create a new form</Hyperlink>
                            </TextBlock>
                            <!-- TODO: Handle empty DataGrid? -->
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding ViewItems}"
                                      SelectedItem="{Binding SelectedViewItem}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding View.Name}"
                                                        Header="Name"
                                                        Width="2*" />
                                    <DataGridTextColumn Binding="{Binding Title}"
                                                        Header="Title"
                                                        Width="4*" />
                                    <DataGridTextColumn Binding="{Binding View.Pages.Count}"
                                                        Header="Pages"
                                                        Width="*" />
                                    <DataGridTextColumn Binding="{Binding View.Fields.Count}"
                                                        Header="Fields"
                                                        Width="*" />
                                    <DataGridTextColumn Binding="{Binding RecordCount}"
                                                        Header="Records"
                                                        Width="*" />
                                </DataGrid.Columns>
                                <b:Interaction.Behaviors>
                                    <Behaviors:TabOnceBehavior />
                                </b:Interaction.Behaviors>
                            </DataGrid>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Header="Dashboards" />
                <TabItem Header="Reports" />
            </TabControl>
        </Grid>
    </Border>
</UserControl>
