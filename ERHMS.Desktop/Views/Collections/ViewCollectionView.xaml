<UserControl x:Class="ERHMS.Desktop.Views.Collections.ViewCollectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors"
             xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Controls:IconButton AltText="Create"
                                 Command="{Binding CreateCommand}"
                                 Content="{x:Static local:Icons.plus}" />
            <Controls:IconButton AltText="Customize"
                                 Command="{Binding CustomizeCommand}"
                                 Content="{x:Static local:Icons.wrench}" />
            <Controls:IconButton AltText="Enter data"
                                 Command="{Binding EnterDataCommand}"
                                 Content="{x:Static local:Icons.pen}" />
            <Controls:IconButton AltText="View data"
                                 Command="{Binding ViewDataCommand}"
                                 Content="{x:Static local:Icons.eye}" />
            <Controls:IconButton x:Name="AdvancedButton"
                                 AltText="Advanced"
                                 Content="{x:Static local:Icons.cog}">
                <Controls:IconButton.ContextMenu>
                    <ContextMenu Placement="Bottom"
                                 PlacementTarget="{x:Reference AdvancedButton}">
                        <MenuItem Command="{Binding ExportDataCommand}"
                                  Header="_Export data" />
                        <MenuItem Command="{Binding ImportDataCommand}"
                                  Header="_Import data" />
                        <MenuItem Command="{Binding DeleteCommand}"
                                  Header="_Delete" />
                    </ContextMenu>
                </Controls:IconButton.ContextMenu>
                <b:Interaction.Behaviors>
                    <Behaviors:OpenContextMenuOnClick />
                </b:Interaction.Behaviors>
            </Controls:IconButton>
        </WrapPanel>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Value.Name}"
                                    Header="Name"
                                    Width="3*" />
                <DataGridTextColumn Binding="{Binding PageCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Pages"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding FieldCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Fields"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding RecordCount}"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Header="Records"
                                    Width="*" />
            </DataGrid.Columns>
            <DataGrid.InputBindings>
                <MouseBinding Command="{Binding ViewDataCommand}"
                              MouseAction="LeftDoubleClick" />
            </DataGrid.InputBindings>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="IsSelected" Value="{Binding Selected}" />
                </Style>
            </DataGrid.ItemContainerStyle>
            <b:Interaction.Behaviors>
                <Behaviors:EnhanceKeyboardNavigation />
            </b:Interaction.Behaviors>
        </DataGrid>
    </Grid>
</UserControl>
