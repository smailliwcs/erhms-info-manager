<UserControl x:Class="ERHMS.Desktop.Views.ViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors">
    <UserControl.Resources>
        <Style x:Key="Field" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Item.Deleted, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}}" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                    <Setter Property="TextDecorations" Value="Strikethrough" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <b:Interaction.Behaviors>
        <Behaviors:RelayEventBehavior EventName="PropertyChanged"
                                      HandlerName="DataContext_PropertyChanged" />
    </b:Interaction.Behaviors>
    <Border Style="{StaticResource LayoutLarge}">
        <Grid Style="{StaticResource Container}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Style="{StaticResource Section}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource Title}"
                           Text="{Binding View.Name, StringFormat='{}{0} Form'}" />
                <WrapPanel Grid.Column="1"
                           VerticalAlignment="Top">
                    <WrapPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource ActionButton}" />
                    </WrapPanel.Resources>
                    <Button Command="{Binding RefreshCommand}">Refresh</Button>
                    <Button Command="{Binding GoBackCommand}"
                            Visibility="{Binding Parent, Converter={StaticResource ObjectToVisibilityConverter}}">
                        Back
                    </Button>
                    <Button Command="local:AppCommands.GoHomeCommand">Home</Button>
                </WrapPanel>
            </Grid>
            <TabControl Grid.Row="1">
                <TabItem Header="Records">
                    <Border Style="{StaticResource LayoutFull}">
                        <Grid Style="{StaticResource Container}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Style="{StaticResource Body}">
                                Select an existing record or <Hyperlink>create a new record</Hyperlink>
                            </TextBlock>
                            <Border Grid.Row="1"
                                    Background="{Binding Background, ElementName=Records}"
                                    Margin="{StaticResource SmallThickness}"
                                    SnapsToDevicePixels="True">
                                <!-- TODO: Handle empty DataGrid -->
                                <!-- TODO: Add filtering and paging -->
                                <DataGrid x:Name="Records"
                                          HorizontalAlignment="Left"
                                          ItemsSource="{Binding Records}"
                                          Margin="0"
                                          MaxColumnWidth="400" />
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>
