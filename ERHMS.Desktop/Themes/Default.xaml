<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ERHMS.Desktop">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{x:Static local:Colors.Accent}" />
    <DropShadowEffect x:Key="Shadow"
                      BlurRadius="{StaticResource HugeSpace}"
                      Color="{x:Static SystemColors.ControlDarkColor}"
                      Direction="270"
                      Opacity="0.5" />
</ResourceDictionary>
