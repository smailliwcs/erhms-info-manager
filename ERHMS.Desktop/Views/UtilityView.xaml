<Window x:Class="ERHMS.Desktop.Views.UtilityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:ERHMS.Desktop.Properties"
        Height="600"
        Style="{StaticResource Layout}"
        Title="{x:Static Properties:Resources.AppTitle}"
        Width="800">
    <Grid Style="{StaticResource Container}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="Log"
                 Grid.Row="0"
                 HorizontalScrollBarVisibility="Visible"
                 IsReadOnly="True"
                 Style="{StaticResource Preformatted}"
                 VerticalScrollBarVisibility="Visible">
        </TextBox>
        <Button Grid.Row="1"
                Command="{Binding CloseCommand}"
                HorizontalAlignment="Center">
            Close
        </Button>
    </Grid>
</Window>
