<UserControl x:Class="ERHMS.Desktop.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Style="{StaticResource FluidLayout}">
        <DataGrid Grid.Column="0"
                  DataContext="{Binding Views}"
                  ItemsSource="{Binding Items}"
                  SelectionMode="Single">
            <b:Interaction.Behaviors>
                <Behaviors:EnhanceKeyboardNavigation />
            </b:Interaction.Behaviors>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Value.Name}"
                                    Header="Name"
                                    Width="3*" />
                <DataGridTextColumn Binding="{Binding PageCount}"
                                    Header="Pages"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding FieldCount}"
                                    Header="Fields"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding RecordCount}"
                                    Header="Records"
                                    CellStyle="{StaticResource NumericDataGridCell}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>
