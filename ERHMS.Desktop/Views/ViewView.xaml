<UserControl x:Class="ERHMS.Desktop.Views.ViewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ERHMS.Desktop"
             xmlns:Behaviors="clr-namespace:ERHMS.Desktop.Behaviors"
             xmlns:Controls="clr-namespace:ERHMS.Desktop.Controls"
             xmlns:Converters="clr-namespace:ERHMS.Desktop.Converters">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ERHMS Info Manager;component/Resources/App.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Converters:PageCountToVisibilityConverter x:Key="PageCountToVisibilityConverter" />
            <Style x:Key="Field" TargetType="TextBlock">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Item.Record.Deleted, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}}" Value="True">
                        <Setter Property="TextDecorations" Value="Strikethrough" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <b:Interaction.Behaviors>
        <Behaviors:RelayEventBehavior EventName="PropertyChanged"
                                      HandlerName="DataContext_PropertyChanged" />
    </b:Interaction.Behaviors>
    <Border Style="{StaticResource LayoutLarge}">
        <Grid Style="{StaticResource Container}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Style="{StaticResource Section}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Style="{StaticResource Title}"
                           Text="{Binding View.Name, StringFormat='{}{0} Form'}" />
                <WrapPanel Grid.Column="1"
                           VerticalAlignment="Top">
                    <WrapPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource ActionButton}" />
                    </WrapPanel.Resources>
                    <Button Command="{Binding RefreshCommand}">_Refresh</Button>
                    <Button Command="{Binding GoUpCommand}">U_p</Button>
                    <Button Command="local:AppCommands.GoHomeCommand">H_ome</Button>
                </WrapPanel>
            </Grid>
            <TabControl Grid.Row="1">
                <TabItem DataContext="{Binding Records}"
                         Header="Records">
                    <Border Style="{StaticResource LayoutFull}">
                        <Grid Style="{StaticResource Container}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Target="{Binding ElementName=SearchText}">
                                    _Search:
                                </Label>
                                <Controls:ActionTextBox x:Name="SearchText"
                                                        Grid.Column="1"
                                                        AutomationProperties.Name="Search"
                                                        ActionName="Clear search"
                                                        ActionText="Clear"
                                                        Command="{Binding ClearSearchTextCommand}"
                                                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
                                <ComboBox Grid.Column="2"
                                          AutomationProperties.Name="Status"
                                          DisplayMemberPath="Text"
                                          ItemsSource="{Binding Statuses}"
                                          MinWidth="125">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ComboBoxItemBase}">
                                            <Setter Property="AutomationProperties.Name" Value="{Binding Text}" />
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Style="{StaticResource Body}">
                                    Select an existing record or <Hyperlink Command="{Binding CreateCommand}">create a new record</Hyperlink>
                                </TextBlock>
                                <WrapPanel Grid.Column="1"
                                           Visibility="{Binding Items.PageCount, Converter={StaticResource PageCountToVisibilityConverter}}">
                                    <WrapPanel.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource Body}" />
                                    </WrapPanel.Resources>
                                    <TextBlock>
                                        <Run>Page</Run>
                                        <Run Text="{Binding Items.CurrentPage, Mode=OneWay}" />
                                        <Run>of</Run>
                                        <Run Text="{Binding Items.PageCount, Mode=OneWay}" />
                                    </TextBlock>
                                    <TextBlock>
                                        <Hyperlink AutomationProperties.Name="Previous page"
                                                   Command="{Binding Items.GoToPreviousPageCommand}">
                                            Prev
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock>
                                        <Hyperlink AutomationProperties.Name="Next page"
                                                   Command="{Binding Items.GoToNextPageCommand}">
                                            Next
                                        </Hyperlink>
                                    </TextBlock>
                                </WrapPanel>
                            </Grid>
                            <Border Grid.Row="2"
                                    Background="{Binding Background, ElementName=RecordItems}"
                                    Margin="{StaticResource DefaultMargin}"
                                    SnapsToDevicePixels="True">
                                <!-- TODO: Handle empty DataGrid -->
                                <DataGrid x:Name="RecordItems"
                                          HorizontalAlignment="Left"
                                          ItemsSource="{Binding Items}"
                                          Margin="0"
                                          MaxColumnWidth="400">
                                    <DataGrid.ItemContainerStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                                        </Style>
                                    </DataGrid.ItemContainerStyle>
                                    <b:Interaction.Behaviors>
                                        <Behaviors:AccessibleDataGridBehavior />
                                    </b:Interaction.Behaviors>
                                </DataGrid>
                            </Border>
                            <WrapPanel Grid.Row="3"
                                       HorizontalAlignment="Center">
                                <WrapPanel.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource ActionButton}" />
                                </WrapPanel.Resources>
                                <Button Command="{Binding EditCommand}">_Edit</Button>
                                <Button Command="{Binding DeleteCommand}">_Delete</Button>
                                <Button Command="{Binding UndeleteCommand}">_Undelete</Button>
                            </WrapPanel>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>
